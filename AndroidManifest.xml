<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.example"
      android:versionCode="1"
      android:versionName="1.0">
    <application android:label="@string/app_name"
                 android:icon="@drawable/logo"
            >

        <activity android:name=".WeatherActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.example.WeatherService.ActionCurrentWeather" />
                <action android:name="com.example.WeatherService.ActionForecastWeather" />

                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name=".Preferences"
                android:label="@string/settings_title">
        </activity>

        <service android:enabled="true" android:name=".WeatherService" />

        <receiver android:name=".WeatherWidgetProvider" android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.example.WeatherService.ActionCurrentWeather" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider" android:resource="@xml/weather_widget_provider_info" />
        </receiver>

    </application>
    <uses-permission android:name="android.permission.INTERNET"/>
</manifest> 
